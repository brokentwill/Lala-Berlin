/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
	<li class="has-dropdown not-click language">
		<a href="#">
			<?php $i=1; ?>
			<?php foreach ($this->getStores() as $_lang): ?>

				<?php if($_lang->getId() == $this->getCurrentStoreId()): ?>
					<span class="active"><?php echo $_lang->getCode(); ?></span>
				<?php else: ?>
					<?php 
					$current_url = explode('/?',$_lang->getCurrentUrl());
					if ( is_array($current_url) AND count($current_url) >=2 )
					{
						$current_url =  Mage::getBaseUrl().'?'.$current_url[1];
					}
					else
					{
						$current_url =  $_lang->getCurrentUrl();
					}
					?>
					<span  onclick="window.location='<?php echo $current_url?>'"><?php echo $_lang->getCode(); ?></span>
				<?php endif; ?>

				<?php if($i == 1) echo '/' ?>
				<?php $i++; ?>
			<?php endforeach; ?>
		</a>
		<!-- <ul class="dropdown">
			<?php foreach ($this->getStores() as $_lang): ?>
				<li><a href="<?php echo $_lang->getCurrentUrl() ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></a></li>
			<?php endforeach; ?>
		</ul> -->
	</li>
<?php endif; ?>
